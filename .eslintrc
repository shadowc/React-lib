{
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "airbnb",
    "plugin:react/recommended"
  ],
  "rules" : {
    "indent": ["error", 4],
    "no-plusplus": ["off"],
    "no-param-reassign": ["off"],
    "max-len": ["error", 120],
    "react/jsx-indent": ["error", 4],
    "react/jsx-indent-props": ["error", 4]
  }
}
