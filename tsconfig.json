{
    "compilerOptions": {
        "outDir": "./dist/",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "module": "es2015",
        "target": "ES2015",
        "allowJs": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "__tests__",
        "tests",
        "samples"
    ]
}
